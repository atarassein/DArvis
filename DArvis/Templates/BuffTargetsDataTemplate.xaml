<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DArvis"
                    xmlns:models="clr-namespace:DArvis.Models">

    <DataTemplate x:Key="BuffTargetsDataTemplate" DataType="{x:Type models:AislingCheckboxViewModel}">
        <CheckBox Content="{Binding Name}"
                  IsChecked="{Binding IsChecked, Mode=TwoWay}"
                  Margin="5,2">
            <CheckBox.Style>
                <Style TargetType="CheckBox" BasedOn="{StaticResource ObsidianCheckBox}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsVisible}" Value="False">
                            <Setter Property="FontStyle" Value="Italic"/>
                            <Setter Property="Foreground" Value="Gray"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </CheckBox.Style>
        </CheckBox>
    </DataTemplate>

</ResourceDictionary>